            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/text_employee_id"
                    android:textSize="@dimen/list_item_text_size"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:paddingRight="15dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <TextView
                    android:hint="710000100"
                    android:textSize="@dimen/list_item_text_size"
                    android:id="@+id/employeeidTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="2"  />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/text_employee_name"
                    android:textSize="@dimen/list_item_text_size"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1.5" />

                <TextView
                    android:hint="Mahmudul"
                    android:textSize="@dimen/list_item_text_size"
                    android:id="@+id/nameTv"
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/text_employee_designation"
                    android:textSize="@dimen/list_item_text_size"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:paddingRight="15dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <TextView
                    android:hint="Director"
                    android:textSize="@dimen/list_item_text_size"
                    android:id="@+id/designationTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="2"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/text_employee_department"
                    android:textSize="@dimen/list_item_text_size"
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <TextView
                    android:hint="IT"
                    android:textSize="@dimen/list_item_text_size"
                    android:id="@+id/departmentTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="2" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/text_employee_email"
                    android:textSize="@dimen/list_item_text_size"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <TextView
                    android:hint="Mahmud@gmail.com"
                    android:textSize="@dimen/list_item_text_size"
                    android:id="@+id/emailTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="2" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/text_employee_reports_to"
                    android:textSize="@dimen/list_item_text_size"
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" />

                <TextView
                    android:hint="Mr. Arif"
                    android:textSize="@dimen/list_item_text_size"
                    android:id="@+id/reportsTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="2" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

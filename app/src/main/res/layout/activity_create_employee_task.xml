<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.CreateEmployeeTask">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_layout_create_employee_task_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_all_side">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_select_job"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/spinner_job_select_task_create"
                    android:id="@+id/textView_job_select_task_create" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_job_select_task_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/HintText"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_job_select_task_create"
                        android:background="@drawable/border"
                        android:hint="@string/hint_enter_job_title"
                        android:padding="@dimen/edit_text_padding"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:nextFocusDown="@+id/user_job_title_text_create"
                        android:textSize="@dimen/login_buttons_text_size" />


                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_task_title"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/edit_text_task_title"
                    android:id="@+id/user_task_title_text_create" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_task_title_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edit_text_task_title_create"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:hint="@string/hint_enter_task_title"
                        android:nextFocusDown="@+id/task_description_text"
                        android:padding="@dimen/edit_text_padding"
                        android:inputType="text"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/login_buttons_text_size" />
                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_task_description"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/edit_text_task_description_create"
                    android:id="@+id/task_description_text_create" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_task_description_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edit_text_task_description_create"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:hint="@string/hint_enter_task_description"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:gravity="left|top"
                        android:minLines="6"
                        android:maxLines="6"
                        android:padding="@dimen/edit_text_padding"
                        android:nextFocusDown="@+id/task_deadline_text_create"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/login_buttons_text_size" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_all_side">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_task_dead_line"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/checkBox_task_deadline_create"
                    android:id="@+id/task_deadline_text_create" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_task_deadline_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/HintText"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/check_box_task_had_dead_line"
                        android:id="@+id/checkBox_task_had_deadline_create"
                        android:padding="@dimen/edit_text_padding"
                        android:nextFocusDown="@+id/task_date_tex_create"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/login_buttons_text_size" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_task_date"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/edit_text_task_dead_create"
                    android:id="@+id/task_date_tex_create" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:focusableInTouchMode="true" >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_task_date_create"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        app:hintTextAppearance="@style/HintText"
                        android:layout_marginBottom="@dimen/lists_title_bottom_margin">

                        <EditText
                            android:id="@+id/edit_text_task_dead_create"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:hint="@string/hint_enter_task_dead"
                            android:inputType="date"
                            android:padding="@dimen/edit_text_padding"
                            android:nextFocusDown="@+id/task_Accesibility_text_create"
                            android:textColor="@color/navigationBarColor"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/login_buttons_text_size" />

                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/date_search_icon"
                        android:id="@+id/buttonTaskLastDateSelect"
                        android:onClick="showDatePicDialog"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_task_Attribute"
                android:textColor="@color/colorBlack"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:nextFocusDown="@+id/spinner_task_Accesibility_create"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_all_side">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_task_Accesibility"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/spinner_task_Accesibility_create"
                    android:id="@+id/task_Accesibility_text_create" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_task_Accesibility_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/HintText"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_task_Accesibility_create"
                        android:background="@drawable/border"
                        android:hint="@string/hint_enter_task_Accesibility"
                        android:padding="@dimen/edit_text_padding"
                        android:nextFocusDown="@+id/task_progress_text_create"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/login_buttons_text_size" />


                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_task_progress"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/spinner_task_progress_create"
                    android:id="@+id/task_progress_text_create" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_task_progress_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/HintText"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_task_progress_create"
                        android:background="@drawable/border"
                        android:hint="@string/hint_enter_task_progress"
                        android:padding="@dimen/edit_text_padding"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:nextFocusDown="@+id/task_priority_text_create"
                        android:textSize="@dimen/login_buttons_text_size" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_task_priority"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/spinner_task_priority_create"
                    android:id="@+id/task_priority_text_create" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_task_priority_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/HintText"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_task_priority_create"
                        android:background="@drawable/border"
                        android:hint="@string/hint_enter_task_priority"
                        android:padding="@dimen/edit_text_padding"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:nextFocusDown="@+id/task_status_text_create"
                        android:textSize="@dimen/login_buttons_text_size" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_task_status"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/spinner_task_status_create"
                    android:id="@+id/task_status_text_create" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_task_status_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/HintText"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_task_status_create"
                        android:background="@drawable/border"
                        android:hint="@string/hint_enter_task_status"
                        android:padding="@dimen/edit_text_padding"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:nextFocusDown="@+id/task_department_text_create"
                        android:textSize="@dimen/login_buttons_text_size" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_employee_department"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/spinner_task_department_create"
                    android:id="@+id/task_department_text_create" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_task_department_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/HintText"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_task_department_create"
                        android:background="@drawable/border"
                        android:hint="@string/hint_enter_task_department"
                        android:padding="@dimen/edit_text_padding"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:nextFocusDown="@+id/task_asign_to_text_create"
                        android:textSize="@dimen/login_buttons_text_size" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_task_assign_to"
                android:textColor="@color/colorBlack"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:nextFocusDown="@+id/spinner_task_Accesibility_create"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_all_side">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_task_assign_to"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/spinner_task_asign_to_create"
                    android:id="@+id/task_asign_to_text_create" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_task_asign_to_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/HintText"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin">

                    <EditText
                        android:id="@+id/spinner_task_asign_to_create"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:hint="@string/hint_enter_task_asign_to"
                        android:inputType="textAutoComplete"
                        android:padding="@dimen/edit_text_padding"
                        android:nextFocusDown="@+id/task_role_text_create"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/login_buttons_text_size" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_task_role"
                    android:textColor="@color/colorBlack"
                    android:nextFocusDown="@+id/spinner_task_role_create"
                    android:id="@+id/task_role_text_create" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_task_role_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/HintText"
                    android:layout_marginBottom="@dimen/lists_title_bottom_margin">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_task_role_create"
                        android:background="@drawable/border"
                        android:hint="@string/hint_enter_task_role"
                        android:padding="@dimen/edit_text_padding"
                        android:textColor="@color/navigationBarColor"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/login_buttons_text_size" />

                </android.support.design.widget.TextInputLayout>
                <!-- </LinearLayout>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">



                    <Button
                        android:id="@+id/btn_job_add_to_list"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/input_field_height_land"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:text="@string/task_activity_add_to_list"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/login_buttons_text_size"
                        />

                    <Button
                        android:id="@+id/btn_job_remove_from_list"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_height="@dimen/input_field_height_land"
                        android:background="@color/colorPrimary"
                        android:text="@string/task_activity_remove_from_list"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/login_buttons_text_size" />

                </LinearLayout>






                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/border_all_side">


                    <Button
                        android:id="@+id/btn_job_save"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/input_field_height"
                        android:background="@color/colorPrimary"
                        android:elevation="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:text="@string/save"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/login_buttons_text_size" />

                    <Button
                        android:id="@+id/btn_job_back"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/input_field_height"
                        android:background="@color/colorPrimary"
                        android:onClick="jobBack"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        android:text="@string/back"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/login_buttons_text_size"/>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</ScrollView>